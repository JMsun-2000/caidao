<div class="cart_item">
<% if line_item == @current_item %>
    <ul id="current_item">
<% else %>
    <ul>
<% end %>
  <li class="item_name"><%= line_item.product.title %></li>
  <li><%= button_to '-', line_items_path(:product_id => line_item.product, :number_change => -1), :remote => true%></li>
  <li class="item_count"><%= line_item.quantity %> </li>
  <li><%= button_to '+', line_items_path(:product_id => line_item.product, :number_change => 1), :remote => true%></li>
  <li class="item_price"><%= number_to_rmb(line_item.total_price) %></li>
</ul>
</div>
