
<div class="cart_title">你的购物车</div>
<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="4">总计</td>
    <td class="total_cell"><%= number_to_rmb(cart.total_price)%></td>
  </tr>
</table>

<%= button_to "结算", new_order_path, :method => :get %>
<%= button_to '清空', cart, :method => :delete, data:{:confirm => '确定清空吗'} %>
