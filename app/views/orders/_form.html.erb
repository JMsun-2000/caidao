<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label '姓名' %>
    <%= f.text_field :name, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label '收货地址' %>
    <%= f.text_area :address, :rows => 3, :cols => 40 %>
  </div>
  <div class="field">
    <%= f.label '电话' %>
    <%= f.text_field :email, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label '支付方式' %>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, :prompt => '选择支付方式' %>
  </div>
  <div class="actions">
    <%= f.submit '下单'%>
  </div>
<% end %>
