<!DOCTYPE html>
<html>
<head>
  <title>菜道</title>
  <%= stylesheet_link_tag  "scaffold"%>
  <%= stylesheet_link_tag  "depot", :media => "all"%>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= @page_title || "菜道市场" %>
    </div>
    <div id="columns">
      <div id="side">
        <div id="showhidecart">
          <% if @cart %>
              <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
                  <%= render @cart %>
              <% end %>
          <% end %>
        </div>

        <% if session[:user_id] %>
            <% if session[:user_priority] > 0 %>
            <ul>
              <li><%= link_to LocalizeHelper::ORDER_WROD,   orders_path   %></li>
              <li><%= link_to LocalizeHelper::PRODUCT_WORD, products_path %></li>
              <li><%= link_to LocalizeHelper::USER_WORD,    users_path    %></li>
            </ul>
            <% end %>
            <%= button_to "#{User::PRIORITY_NAMES[session[:user_priority]]}#{LocalizeHelper::LOGOUT_WORD}", logout_path, :method => :delete   %>
        <% end %>

      </div>
    </div>
    <div id="main">
      <%= yield %>
    </div>
</body>
</html>
