<!DOCTYPE html>
<html>
<head>
  <title>菜道</title>
  <%= stylesheet_link_tag  "scaffold"%>
  <%= stylesheet_link_tag  "depot", :media => "all"%>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= @page_title || "菜道市场" %>
    </div>
    <div id="columns">
      <div id="side">
        <div id="showhidecart">
          <% if @cart %>
              <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
                  <%= render @cart %>
              <% end %>
          <% end %>
        </div>

        <% if session[:user_id] %>
            <% if session[:user_priority] > 0 %>
                <ul>
                  <% if session[:user_priority] > User::ADMIN_MAP['菜品管理员'] %>
                    <li><%= link_to LocalizeHelper::ORDER_WROD,   orders_path   %></li>
                  <% end %>
                  <% if session[:user_priority] == User::ADMIN_MAP['菜品管理员']\
                       || session[:user_priority] == User::ADMIN_MAP['总管理']\
                       || session[:user_priority] == User::ADMIN_MAP['菜农']%>
                    <li><%= link_to LocalizeHelper::PRODUCT_WORD, products_path %></li>
                  <% end %>
                  <% if session[:user_priority] == User::ADMIN_MAP['总管理']\
                       || session[:user_priority] == User::ADMIN_MAP['菜农']%>
                      <li><%= link_to LocalizeHelper::CROPLAND_MANAGER_WORD, croplands_path %></li>
                  <% end %>
                  <% if session[:user_priority] == User::ADMIN_MAP['总管理'] %>
                    <li><%= link_to LocalizeHelper::USER_WORD,    users_path    %></li>
                  <% end %>
              </ul>
            <% else %>
                <ul>
                  <li><%= link_to "#{LocalizeHelper::HOME_PAGE_WORD}", store_path%> </li>
                  <li><%= link_to "#{LocalizeHelper::MY_WORD}#{LocalizeHelper::ORDER_WROD}", customer_order_index_path %> </li>
                  <li><%= link_to "#{LocalizeHelper::MY_INFO_WORD}", User.find_by_id(session[:user_id])%> </li>
                </ul>
            <% end %>
            <%= button_to "#{User::PRIORITY_NAMES[session[:user_priority]]}#{LocalizeHelper::LOGOUT_WORD}", logout_path, :method => :delete   %>
        <% else %>
            <%= link_to LocalizeHelper::LOGIN_WORD, login_path  %>
      <% end %>

      </div>
    </div>
    <div id="main">
      <%= yield %>
    </div>
</body>
</html>
