<!DOCTYPE html>
<html>
<head>
  <title>菜道</title>
  <%= stylesheet_link_tag  "scaffold"%>
  <%= stylesheet_link_tag  "depot", :media => "all"%>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= @page_title || "菜道市场" %>
    </div>
    <div id="columns">
      <div id="side">
        <div id="showhidecart">
        <% if @cart %>
         <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
          <%= render @cart %>
          <% end %>
        <% end %>
        </div>

        <a>Home</a> <br/>
        <a>Question</a> <br/>
        <a>News</a> <br/>
        <a>Contact</a> <br/>
      </div>
    </div>
    <div id="main">
      <%= yield %>
    </div>
</body>
</html>
